    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'acala'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=acala",
                    "--package=acala"
                ],
                "filter": {
                    "name": "acala",
                    "kind": "bin"
                }
            },
            "args": ["--dev", "-lruntime=debug", "--instant-sealing", "-levm=trace"],
            "cwd": "${workspaceFolder}"
        },
    ]
}
